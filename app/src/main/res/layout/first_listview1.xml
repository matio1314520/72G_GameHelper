<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/icon_listview1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_dialog_email"/>

    <TextView
        android:id="@+id/name_listview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon_listview1"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/get_listview1"
        android:layout_toRightOf="@id/icon_listview1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="sssss"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/icon_listview1"
        android:text="@string/left"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/remain_listview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/left"
        android:text="ss"
        android:textColor="@android:color/holo_orange_light" />

    <TextView
        android:id="@+id/content_listview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/icon_listview1"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/get_listview1"
        android:layout_toRightOf="@id/icon_listview1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="444"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/get_listview1"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape"
        android:text="@string/getaccount"
        android:textColor="@android:color/holo_orange_light" />

</RelativeLayout>