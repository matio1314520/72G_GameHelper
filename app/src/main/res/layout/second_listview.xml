<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/second_image_listview2"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_dialog_dialer" />

    <TextView
        android:id="@+id/second_title_listview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/second_image_listview2"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/second_image_listview2"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="sssssssssssss"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/second_left_listview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/second_image_listview2"
        android:inputType="number"
        android:text="sss" />

    <TextView
        android:id="@+id/second_join_listview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/second_image_listview2"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/second_image_listview2"
        android:ellipsize="end"
        android:inputType="number"
        android:maxLines="1"
        android:text="sss" />

    <TextView
        android:id="@+id/second_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/second_join_listview2"
        android:layout_toRightOf="@id/second_join_listview2"
        android:text="@string/activityjoin" />

    <TextView
        android:id="@+id/second_end_listview2"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignBaseline="@id/second_join_listview2"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/second_txt"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/second_ubi_listview2"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@mipmap/ic_next" />

</RelativeLayout>