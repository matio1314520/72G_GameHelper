<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/third_icon_listview2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/third_name_listview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/third_icon_listview2"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/third_icon_listview2"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="ssssssssssssssss"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/third_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/third_icon_listview2"
        android:text="@string/value"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/third_remain_listview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/third_left"
        android:text="00000"
        android:textColor="@android:color/holo_orange_light" />

    <TextView
        android:id="@+id/third_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/third_icon_listview2"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/third_icon_listview2"
        android:text="@string/left"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/third_content_listview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/third_icon_listview2"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@+id/third_get_listview2"
        android:layout_toRightOf="@id/third_one"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="ssssss"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/third_get_listview2"
        android:layout_width="85dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="@string/giveget"
        android:textColor="@android:color/holo_blue_light" />

</RelativeLayout>