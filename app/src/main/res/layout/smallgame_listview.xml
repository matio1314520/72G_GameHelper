<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/third_icon_listview1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/third_name_listview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/third_icon_listview1"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/thirdget_listview1"
        android:layout_toRightOf="@id/third_icon_listview1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="ssssssssssssssss"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/third_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/third_icon_listview1"
        android:text="@string/value"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/third_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/third_icon_listview1"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/next_smallgame"
        android:layout_toRightOf="@id/third_icon_listview1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/left"
        android:textColor="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/next_smallgame"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:src="@mipmap/ic_next" />

</RelativeLayout>